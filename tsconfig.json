{
  "compilerOptions": {
      "target": "es2022",
      "jsx": "react",
      "allowJs": true,
      "module": "ES2020",
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node",
      "strict": true,
      "declaration": true,
      "declarationDir": "dist",
      "skipLibCheck": true
  },
  "include": [
    "src",
    "fonts.d.ts"
  ],
  "exclude": [
    "node_modules",
    "rollup.config.js"
  ]
}
